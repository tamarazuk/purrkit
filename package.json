{
  "name": "purrkit",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "experiment:new": "node scripts/create-experiment.mjs",
    "reset:deps": "rm -rf node_modules && find apps packages templates -name node_modules -type d -prune -exec rm -rf {} + && pnpm install",
    "reset:deps:deep": "pnpm store prune && pnpm reset:deps"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@payloadcms/next>@dnd-kit/core": "6.3.0"
    }
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=24"
  }
}
